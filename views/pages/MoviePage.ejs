<html>

<head>
    <% include ../partials/head %>
    <title>Movie Page</title>
    <link rel="stylesheet" href="/CSS/form.css">

</head>
<header>
    <% include ../partials/header %>
</header>

<body onload="showMovieOnMoviePage()">

    <main>

        <div id = "searchResults">

        </div>

        <div id = "createReview">
            <h2>Create Review</h2>
            <form method="post" action="/addMovie">
                <textarea id "movieReviewTextArea" rows="1" autocomplate = "off" required maxlength="10000"></textarea>
                <input type="submit" value="X" id="submit">
            </form>
        </div>

        <h2>Reviews</h2>
        <div id = "movieReviews">
            <% array.forEach(function(info) { %>
                <div> <%= info.Username %> </div>
                <div> <%= info.Review %> </div>
            <% }); %>
        </div>

    </main>

    <footer>
        <% include ../partials/footer %>
    </footer>

</body>

</html>
